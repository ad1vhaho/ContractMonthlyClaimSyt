@model ContractMonthlyClaimSyt.Models.CoordinatorDashboardViewModel
@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">Pending Claims for Verification</div>
    <div class="card-body p-0">
        <table class="table table-striped table-sm mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Claim #</th>
                    <th>Lecturer</th>
                    <th>Period</th>
                    <th>Amount</th>
                    <th>Attachments</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.PendingClaims.Any())
                {
                    foreach (var c in Model.PendingClaims)
                    {
                        <tr>
                            <td>@c.ClaimNumber</td>
                            <td>@c.LecturerName</td>
                            <td>@c.Month/@c.Year</td>
                            <td>@c.Amount.ToString("C")</td>
                            <td>
                                @if (c.AttachmentFileNames.Any())
                                {
                                    <ul class="mb-0">
                                        @foreach (var f in c.AttachmentFileNames)
                                        {
                                            <li>@f</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                            <td class="text-end">
                                <form asp-action="Verify" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@c.Id" />
                                    <input type="hidden" name="decision" value="Approve" />
                                    <button type="submit" class="btn btn-sm btn-success">Verify</button>
                                </form>
                                <form asp-action="Verify" method="post" class="d-inline ms-1">
                                    <input type="hidden" name="id" value="@c.Id" />
                                    <input type="hidden" name="decision" value="Reject" />
                                    <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No pending claims.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
