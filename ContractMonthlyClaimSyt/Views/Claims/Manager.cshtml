@model ContractMonthlyClaimSyt.Models.ManagerDashboardViewModel
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="row">
    <div class="col-lg-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white">Verified Claims – Ready for Approval</div>
            <div class="card-body p-0">
                <table class="table table-striped table-sm mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Claim #</th>
                            <th>Lecturer</th>
                            <th>Period</th>
                            <th>Amount</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.VerifiedClaims.Any())
                        {
                            foreach (var c in Model.VerifiedClaims)
                            {
                                <tr>
                                    <td>@c.ClaimNumber</td>
                                    <td>@c.LecturerName</td>
                                    <td>@c.Month/@c.Year</td>
                                    <td>@c.Amount.ToString("C")</td>
                                    <td class="text-end">
                                        <form asp-action="Approve" method="post">
                                            <input type="hidden" name="id" value="@c.Id" />
                                            <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No verified claims waiting for approval.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-danger text-white">Rejected Claims (Audit)</div>
            <div class="card-body p-0">
                <table class="table table-striped table-sm mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Claim #</th>
                            <th>Lecturer</th>
                            <th>Period</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RejectedClaims.Any())
                        {
                            foreach (var c in Model.RejectedClaims)
                            {
                                <tr>
                                    <td>@c.ClaimNumber</td>
                                    <td>@c.LecturerName</td>
                                    <td>@c.Month/@c.Year</td>
                                    <td>@c.Amount.ToString("C")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No rejected claims.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
